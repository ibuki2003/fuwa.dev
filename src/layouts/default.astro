---
import "@/app.scss";

const t = Astro.props.title;
const title = t ? `${t} - ふわわあのへや` : `ふわわあのへや`;

const enable_tracking = import.meta.env.PROD;

---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {
      enable_tracking && (
        <script is:inline>
          var _paq = window._paq = window._paq || [];
          /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
          _paq.push(['trackPageView']);
          _paq.push(['enableLinkTracking']);
          (function() {
          var u="//matomo.fuwa.dev/";
          _paq.push(['setTrackerUrl', u+'matomo.php']);
          _paq.push(['setSiteId', '1']);
          var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
          g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
          })();
        </script>
      )
    }
    <script is:inline async src="https://platform.twitter.com/widgets.js"></script>
    <link rel="me" href="https://misskey.io/@fuwa2003" />
    <link rel="me" href="https://twitter.com/ibuki2003" />
  </head>
  <body>
    <header>
      <a href="/" class="navbar-brand">ふわわあのへや</a>
      <small>競プロとか、好きなこと、いろいろ。</small>
    </header>
    <main id="md">
      <slot />
    </main>
    <footer>
      <small>ibuki2003</small>
    </footer>
  </body>
</html>
